<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewForSubCategory"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/addlogo"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etTitleforDialogforSubCategory"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="text"
        android:hint="Title"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/etDescribtionForDialogforSubCategory"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:inputType="number"
        android:gravity="center"
        android:hint="@string/subcatagory_descrition"

        android:paddingLeft="20dp" />


    <Button
        android:id="@+id/btnAddNowForDialogforSubCategory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorCyano"
        android:textColor="@color/colorWhite"
        android:text="Add Now"
        android:textSize="17sp"
        android:textStyle="bold" />


</LinearLayout>




