<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Women_Products.AddCatagoriesActivity">

    <ImageView
        android:id="@+id/imageViewForCatagory"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/addlogo"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etCatagoryTitle"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Title"
        android:paddingLeft="20dp"
        android:inputType="text"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <EditText
        android:id="@+id/etCatagoryDescription"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:inputType="number"
        android:hint="Price"

        android:paddingLeft="20dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />


    <Button
        android:id="@+id/btnAddNowForCatagory"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@color/colorCyano"
        android:textColor="@color/colorWhite"
        android:text="Add Now"
        android:textSize="17sp"
        android:textStyle="bold" />


</LinearLayout>