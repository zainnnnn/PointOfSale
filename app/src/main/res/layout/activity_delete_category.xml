<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Women_Products.DeleteCategoryActivity"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewForProduct"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo_big" />



        <TextView
            android:id="@+id/tvCategoryTitleForDeleteDialog"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorForHinttext"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etCategoryDescriptionForDeleteDialog"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Reason"
            android:inputType="text"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorForHinttext"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnDeleteCategory"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorCyano"
            android:gravity="center"
            android:text="Delete Now"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnCancelDeleteCategory"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorCyano"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>