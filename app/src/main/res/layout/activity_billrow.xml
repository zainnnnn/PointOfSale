<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rowBilltv_SrNO"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:paddingRight="2dp"
            android:text="Sr.NO"
            android:textSize="12dp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/colorForHint"
            android:backgroundTint="#c19a6b">

        </View>

        <TextView
            android:id="@+id/rowBilltv_BillProductName"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Products"
            android:textSize="12dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorForHint"
            android:backgroundTint="#c19a6b" />

        <TextView
            android:id="@+id/rowBilltv_BillProductQt"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Qt"
            android:textSize="12dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorForHint"
            android:backgroundTint="#c19a6b" />

        <TextView
            android:id="@+id/rowBilltv_BillProductPrice"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Price"
            android:textSize="12dp" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:background="@color/colorForHint"
            android:backgroundTint="#c19a6b" />

        <TextView
            android:id="@+id/rowBilltv_total"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Total"
            android:textSize="12dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/colorForHint"
            android:backgroundTint="#c19a6b" />

    </LinearLayout>
</LinearLayout>