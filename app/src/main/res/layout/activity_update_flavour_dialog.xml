<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewForProduct"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo_big" />

        <EditText
            android:id="@+id/etFlavourTitleForUpdateDialog"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="Flavour Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/etFlavourDescriptionForUpdateDialog"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="Description"
            android:inputType="text" />

        <Button
            android:id="@+id/btnUpdateFlavour"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorCyano"
            android:text="Update Now"
            android:textColor="@color/colorWhite"

            android:textSize="17sp" />

        <Button
            android:id="@+id/btnCancelUpdateFlavour"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorCyano"
            android:text="Cancel"
            android:textColor="@color/colorWhite"

            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>