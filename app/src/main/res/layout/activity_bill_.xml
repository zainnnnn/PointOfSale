<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Bill_Activity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="@color/colorCyano"
                android:layout_marginTop="15dp"
                android:background="#c19a6b"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:paddingRight="2dp"
                    android:background="@color/colorCyano"
                    android:text="Sr.NO"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.4dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLogoBack"
                    android:backgroundTint="@color/colorWhite">

                </View>

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Products"
                    android:background="@color/colorCyano"
                    android:textColor="@color/colorWhite"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLogoBack"
                    android:backgroundTint="@color/colorWhite" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Quantity"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorCyano"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLogoBack"
                    android:backgroundTint="@color/colorWhite" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorCyano"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLogoBack"
                    android:backgroundTint="@color/colorWhite" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="Total"
                    android:textSize="12dp" />

                <View
                    android:layout_width="0.4dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorLogoBack"
                    android:backgroundTint="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_Bill"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Net Price        ="
                android:textColor="@color/colorLogoBack"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/billtv_netBillPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Price"
                android:textColor="@color/colorLogoBack"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Discount       ="
                android:textColor="@color/cardview_dark_background"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/billet_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="discount"
                android:inputType="number"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textColor="@color/colorLogoBack"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_netAmount"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Total"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorCyano"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/billtv_NetAmount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:hint=" Amount"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btncontinueShopping"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorCyano"
                android:text="Continue Shopping"
                android:textSize="17dp">

            </Button>

            <Button
                android:id="@+id/btnCheclout"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorCyano"
                android:layout_marginTop="5dp"
                android:text="CHeckout"
                android:textSize="22dp">

            </Button>


        </LinearLayout>
       </LinearLayout>
    </LinearLayout>
