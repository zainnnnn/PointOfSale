<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewForProduct"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/logo_big" />

        <EditText
            android:id="@+id/etVariantTitleForUpdateDialog"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="Flavour Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/etVariantDescriptionForUpdateDialog"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="Description"
            android:inputType="text" />

        <Button
            android:id="@+id/btnUpdateVariant"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorCyano"
            android:text="Update Now"

            android:textSize="20sp" />

        <Button
            android:id="@+id/btnCancelUpdateVariant"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorCyano"
            android:text="Cancel"

            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>